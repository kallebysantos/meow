# runs on alpine at /mnt/.workdir

# Create user
adduser -D -H -s /bin/ash deno

# Copy project
mkdir /app
cp -R ./* /app
chown -R deno:deno /app

# Install deno
apk update 
apk add deno

# Add OpenRC service
cp meow-entrypoint.sh /etc/init.d/deno-server
chmod +x /etc/init.d/deno-server
rc-update add deno-server default
